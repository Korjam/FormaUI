<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:system="clr-namespace:System;assembly=System.Runtime">

  <FontFamily x:Key="ControlFontFamily">Segoe Ui</FontFamily>
  <!--<FontFamily x:Key="ControlFontFamily">Segoe UI Variable</FontFamily>-->

  <FontWeight x:Key="CaptionFontWeight">Regular</FontWeight>
  <system:Double x:Key="CaptionFontSize">12</system:Double>

  <FontWeight x:Key="BodyFontWeight">Regular</FontWeight>
  <system:Double x:Key="BodyFontSize">14</system:Double>

  <FontWeight x:Key="BodyStrongFontWeight">SemiBold</FontWeight>
  <system:Double x:Key="BodyStrongFontSize">14</system:Double>

  <FontWeight x:Key="BodyLargeWeight">Regular</FontWeight>
  <system:Double x:Key="BodyLargeFontSize">18</system:Double>

  <FontWeight x:Key="SubtitleFontWeight">SemiBold</FontWeight>
  <system:Double x:Key="SubtitleFontSize">20</system:Double>

  <FontWeight x:Key="TitleFontWeight">SemiBold</FontWeight>
  <system:Double x:Key="TitleFontSize">28</system:Double>

  <FontWeight x:Key="TitleLargeFontWeight">SemiBold</FontWeight>
  <system:Double x:Key="TitleLargeFontSize">40</system:Double>

  <FontWeight x:Key="DisplayFontWeight">SemiBold</FontWeight>
  <system:Double x:Key="DisplayFontSize">68</system:Double>

</ResourceDictionary>