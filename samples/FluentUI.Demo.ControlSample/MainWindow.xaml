            <Slider Grid.Row="2"
                    Grid.Column="0"
                    Value="5"
                    IsSelectionRangeEnabled="True"
                    SelectionStart="2.5"
                    SelectionEnd="7.5"
                    IsEnabled="False" />

            <Slider Grid.Row="4"
                    Grid.Column="0"
                    Value="10"
                    IsSelectionRangeEnabled="True"
                    SelectionStart="5"
                    SelectionEnd="10"
                    IsEnabled="False" />

