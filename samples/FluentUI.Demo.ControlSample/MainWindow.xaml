              <RowDefinition Height="5" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="5" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Slider Grid.Row="0"
                    Grid.Column="0"
                    TickPlacement="BottomRight" />

            <Slider Grid.Row="2"
                    Grid.Column="0"
                    Value="5"
                    TickPlacement="BottomRight" />

            <Slider Grid.Row="4"
                    Grid.Column="0"
                    Value="10"
                    TickPlacement="BottomRight" />

          </Grid>

          <Grid Grid.Row="4"
