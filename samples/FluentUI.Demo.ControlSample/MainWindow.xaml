              <RowDefinition Height="5" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Slider Grid.Row="0"
                    Grid.Column="0"
                    IsSelectionRangeEnabled="True"
                    SelectionStart="0"
                    SelectionEnd="5"
