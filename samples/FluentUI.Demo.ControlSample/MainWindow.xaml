<controls:FluentWindow
  x:Class="FluentUI.Demo.ControlSample.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:FluentUI.Demo.ControlSample"
  xmlns:controls="clr-namespace:FluentUI.Controls;assembly=FluentUI"
  xmlns:sys="clr-namespace:System;assembly=mscorlib"
  mc:Ignorable="d"
  Title="MainWindow"
  Height="600"
  Width="1000">

  <Window.DataContext>
    <local:MainViewModel />
  </Window.DataContext>

  <TabControl Padding="10,10,0,0"
              TabStripPlacement="Top">

    <TabItem Header="Button">

      <Grid>

        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="120" />
          <ColumnDefinition Width="5" />
          <ColumnDefinition Width="120" />
          <ColumnDefinition Width="5" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="5" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="5" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="5" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="5" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Grid.ColumnSpan="3"
                   Text="Button"
                   Style="{DynamicResource TextSubtitle}" />

        <Button Grid.Row="2"
                Grid.Column="0"
                Content="Text" />

        <Button Grid.Row="2"
                Grid.Column="2"
                IsEnabled="False"
                Content="Text" />

        <Button Grid.Row="2"
                Grid.Column="4"
                Style="{DynamicResource StandardCompactButtonStyle}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Text" />

        <Button Grid.Row="2"
                Grid.Column="6"
                Style="{DynamicResource StandardCompactButtonStyle}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsEnabled="False"
                Content="Text" />

        <Button Grid.Row="4"
                Grid.Column="0"
                Style="{DynamicResource AccentButtonStyle}"
                Content="Text" />

        <Button Grid.Row="4"
                Grid.Column="2"
                Style="{DynamicResource AccentButtonStyle}"
                IsEnabled="False"
                Content="Text" />

      </Grid>

    </TabItem>

    <TabItem Header="Toggle Button">

      <Grid>

        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="120" />
          <ColumnDefinition Width="5" />
          <ColumnDefinition Width="120" />
          <ColumnDefinition Width="5" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="5" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="5" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="5" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0"
                   Grid.ColumnSpan="3"
                   Text="Toggle Button"
                   Style="{DynamicResource TextSubtitle}" />

        <ToggleButton Grid.Row="2"
                      Grid.Column="0"
                      Content="Text" />

        <ToggleButton Grid.Row="2"
                      Grid.Column="2"
                      IsEnabled="False"
                      Content="Text" />

        <ToggleButton Grid.Row="4"
                      Grid.Column="2"
                      IsChecked="True"
                      IsEnabled="False"
                      Content="Text" />

        <ToggleButton Grid.Row="2"
                      Grid.Column="4"
                      Style="{DynamicResource StandardCompactToggleButtonStyle}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Content="Text" />

        <ToggleButton Grid.Row="2"
                      Grid.Column="6"
                      Style="{DynamicResource StandardCompactToggleButtonStyle}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      IsEnabled="False"
                      Content="Text" />

        <ToggleButton Grid.Row="4"
                      Grid.Column="6"
                      Style="{DynamicResource StandardCompactToggleButtonStyle}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      IsChecked="True"
                      IsEnabled="False"
                      Content="Text" />

      </Grid>

    </TabItem>

    <TabItem Header="Check Box">

      <Grid>

        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="5" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="5" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="5" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="5" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="5" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="5" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0"
                   Grid.ColumnSpan="8"
                   Text="Check Box"
                   Style="{DynamicResource TextSubtitle}" />

        <CheckBox Grid.Row="2"
                  Grid.Column="0"
                  Content="Text" />

        <CheckBox Grid.Row="2"
                  Grid.Column="2"
                  IsEnabled="False"
                  Content="Text" />

        <CheckBox Grid.Row="4"
                  Grid.Column="0"
                  IsChecked="True"
                  Content="Text" />

        <CheckBox Grid.Row="4"
                  Grid.Column="2"
                  IsChecked="True"
                  IsEnabled="False"
                  Content="Text" />

        <CheckBox Grid.Row="6"
                  Grid.Column="0"
                  IsChecked="{x:Null}"
                  Content="Text" />

        <CheckBox Grid.Row="6"
                  Grid.Column="2"
                  IsChecked="{x:Null}"
                  IsEnabled="False"
                  Content="Text" />

        <CheckBox Grid.Row="2"
                  Grid.Column="4" />

        <CheckBox Grid.Row="2"
                  Grid.Column="6"
                  IsEnabled="False" />

        <CheckBox Grid.Row="4"
                  Grid.Column="4"
                  IsChecked="True" />

        <CheckBox Grid.Row="4"
                  Grid.Column="6"
                  IsChecked="True"
                  IsEnabled="False" />

        <CheckBox Grid.Row="6"
                  Grid.Column="4"
                  IsChecked="{x:Null}" />

        <CheckBox Grid.Row="6"
                  Grid.Column="6"
                  IsChecked="{x:Null}"
                  IsEnabled="False" />

      </Grid>

    </TabItem>

    <TabItem Header="Radio Button">

      <Grid>

        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="5" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="5" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="5" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="5" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="5" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="5" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Grid.ColumnSpan="3"
                   Text="Radio Button"
                   Style="{DynamicResource TextSubtitle}" />

        <Grid Grid.Row="2"
              Grid.Column="0">

          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <RadioButton Grid.Row="0"
                       Content="Item 1"
                       IsChecked="True" />

          <RadioButton Grid.Row="2"
                       Content="Item 2" />

          <RadioButton Grid.Row="4"
                       Content="Item 3" />
        </Grid>

        <Grid Grid.Row="2"
              Grid.Column="2">

          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <RadioButton Grid.Row="0"
                       Content="Item 1" />

          <RadioButton Grid.Row="2"
                       Content="Item 2"
                       IsChecked="{x:Null}" />

          <RadioButton Grid.Row="4"
                       Content="Item 3" />
        </Grid>

        <Grid Grid.Row="2"
              Grid.Column="4">

          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <RadioButton Grid.Row="0"
                       Content="Item 1"
                       IsChecked="True"
                       IsEnabled="False" />

          <RadioButton Grid.Row="2"
                       Content="Item 2" 
                       IsChecked="{x:Null}"
                       IsEnabled="False"  />

          <RadioButton Grid.Row="4"
                       Content="Item 3"
                       IsEnabled="False" />

        </Grid>

        <Grid Grid.Row="2"
              Grid.Column="6">

          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>

          <RadioButton Grid.Row="0"
                       IsChecked="True" />

          <RadioButton Grid.Row="2" />

          <RadioButton Grid.Row="4" />
        </Grid>

        <Grid Grid.Row="2"
              Grid.Column="8">

          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>

          <RadioButton Grid.Row="0" />

          <RadioButton Grid.Row="2"
                       IsChecked="{x:Null}" />

          <RadioButton Grid.Row="4" />
        </Grid>

        <Grid Grid.Row="2"
              Grid.Column="10">

          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>

          <RadioButton Grid.Row="0"
                       IsChecked="True"
                       IsEnabled="False" />

          <RadioButton Grid.Row="2"
                       IsChecked="{x:Null}"
                       IsEnabled="False"  />

          <RadioButton Grid.Row="4"
                       IsEnabled="False" />

        </Grid>

      </Grid>

    </TabItem>

